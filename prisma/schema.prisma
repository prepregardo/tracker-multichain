generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  image         String?
  role          String    @default("VIEWER")
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts      Account[]
  sessions      Session[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Wallet {
  id        String   @id @default(cuid())
  network   String
  address   String
  label     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([network, address])
}

model Token {
  id        String   @id @default(cuid())
  network   String
  contract  String
  symbol    String
  decimals  Int      @default(18)
  createdAt DateTime @default(now())

  @@unique([network, contract])
}

model Transaction {
  id          String   @id @default(cuid())
  network     String
  hash        String
  wallet      String
  token       String?
  direction   String
  amount      String
  timestamp   DateTime
  blockNumber Int
  fee         String?
  status      String   @default("confirmed")
  createdAt   DateTime @default(now())

  @@unique([network, hash, wallet])
  @@index([wallet, network])
  @@index([timestamp])
}

model Balance {
  id        String   @id @default(cuid())
  network   String
  wallet    String
  token     String
  contract  String
  decimals  Int      @default(18)
  balance   String
  updatedAt DateTime @updatedAt

  @@unique([network, wallet, contract])
  @@index([wallet])
}

model Reconciliation {
  id              String   @id @default(cuid())
  wallet          String
  network         String
  token           String?
  expectedBalance String
  actualBalance   String
  difference      String
  status          String   @default("pending")
  createdAt       DateTime @default(now())

  @@index([wallet, network])
}
